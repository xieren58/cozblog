<% content_for :title do %>
<%= @post.title %> -- 
<% end %>

<h1><%= @post.title %></h1>

<P>
	<g:plusone></g:plusone>
	<% if user_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
</p>



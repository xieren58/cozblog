<% content_for :sidebar do %>
  <h2>Tags</h2>
    <ul>
      <% @post.tags.each do |tag| %>
      <li><%= link_to tag.name, tags_path(:tag => tag.name)%></li>
     <% end %>
    </ul>
  
    <p>Last updated: <%= @post.updated_at.strftime("%B %d, %Y at %H:%S") %></p> 
<% end %>